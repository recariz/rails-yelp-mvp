<h1>Create a new restaurant</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORY_LIST %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

